<h1>Flight Prices</h1>

<table>
  <thead>
    <tr>
      <th>Weekdays regular</th>
      <th>Weekdays reward</th>
      <th>Weekends regular</th>
      <th>Weekends reward</th>
      <th>Fight code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_prices.each do |flight_price| %>
      <tr>
        <td>짜<%= flight_price.weekdays_regular %></td>
        <td>짜<%= flight_price.weekdays_reward %></td>
        <td>짜<%= flight_price.weekends_regular %></td>
        <td>짜<%= flight_price.weekends_reward %></td>
        <td><%= flight_price.flight_code %></td>
        <td><%= link_to 'Show', flight_price %></td>
        <td><%= link_to 'Edit', edit_flight_price_path(flight_price) %></td>
        <td><%= link_to 'Destroy', flight_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

