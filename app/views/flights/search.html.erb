<h1>去程</h1>
<table>
  <thead>
    <tr>
      <th>Fight code</th>
      <th>Sched</th>
      <th>From</th>
      <th>To</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order[:from_flights].each do |flight| %>
      <tr>
        <td><%= flight.flight_code %></td>
        <td><%= flight.sched %></td>
        <td><%= flight.from %></td>
        <td><%= flight.to %></td>
        <td><%= @order[:from_price] %></td>
        <td><%= link_to 'Show', flight %></td>
      </tr>
    <% end %>
  </tbody>
</table>
