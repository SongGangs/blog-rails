<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Fight code</th>
      <th>Sched</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.flight_code %></td>
        <td><%= flight.sched %></td>
        <td><%= flight.from %></td>
        <td><%= flight.to %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>


<br>
<br>
<br>
<h1>Search</h1>

<%= form_tag("/flights/search", method: "get") do %>
<p>
  <%= label_tag(:date, "Date:") %>
  <%= text_field_tag(:date) %>
</p>
<p>
  <%= label_tag(:type, "Type:") %>
  <%= select_tag(:type, options_for_select([['reward','reward'], ['regular','regular']])) %>
</p>
<p>
  <%= submit_tag("Search") %>
</p>
<% end %>