
<h1>Listing articles</h1>

<td><%= link_to 'New article', new_article_path %></td>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
<!--      article_path(article) 路径-->
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Back', articles_path %></td>
      <td><%= link_to 'Destroy', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Preview', articles_preview_path(article) %></td>
      <td><%= link_to 'DownLoad', articles_download_path(article) %></td>
<!--      <td><%#= link_to 'My blog', controller: 'welcome' %></td>-->
    </tr>
  <% end %>
</table>